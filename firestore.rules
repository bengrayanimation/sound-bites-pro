// Firestore Security Rules (Firebase)
// NOTE: This project uses Lovable Cloud for backend features.
// This file is provided because you requested Firestore rules.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User-owned private documents
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read for published posts; authenticated users can write their own posts
    match /posts/{postId} {
      allow read: if resource.data.published == true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}
